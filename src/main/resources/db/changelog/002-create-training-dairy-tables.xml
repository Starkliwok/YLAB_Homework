<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001-create-users-table" author="Denis" runAlways="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="users" schemaName="training_dairy"/>
            </not>
        </preConditions>

        <createTable tableName="users" schemaName="training_dairy">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>

            <column name="name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>

            <column name="password" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002-create-admin-table" author="Denis" runAlways="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="admins" schemaName="training_dairy"/>
            </not>
        </preConditions>

        <createTable tableName="admins" schemaName="training_dairy">
            <column name="user_id" type="BIGINT">
                <constraints foreignKeyName="fk_user_with_root_id" references="training_dairy.users(id)"/>
            </column>

            <column name="admin_level" type="TINYINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="003-create-trainings-table" author="Denis" runAlways="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="trainings" schemaName="training_dairy"/>
            </not>
        </preConditions>

        <createTable tableName="trainings" schemaName="training_dairy">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>

            <column name="name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>

            <column name="type" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>

            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>

            <column name="calories_spent" type="INT"/>
            <column name="duration_in_minutes" type="DECIMAL(10, 2)"/>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_id" references="training_dairy.users(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-create-additional-data-table" author="Denis" runAlways="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="additional_data" schemaName="training_dairy"/>
            </not>
        </preConditions>
        <createTable tableName="additional_data" schemaName="training_dairy">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>

            <column name="name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>

            <column name="value" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>

            <column name="training_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_training_id"
                             references="training_dairy.trainings(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="005-create-user-audit-result-table" author="Denis" runAlways="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user_audit_result" schemaName="training_dairy"/>
            </not>
        </preConditions>

        <createTable tableName="user_audit_result" schemaName="training_dairy">
            <column name="result" type="VARCHAR(10)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="006-create-user-audit-table" author="Denis" runAlways="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user_audit" schemaName="training_dairy"/>
            </not>
        </preConditions>

        <createTable tableName="user_audit" schemaName="training_dairy">
            <column name="date" type="DATETIME">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_audit_user_id" references="training_dairy.users(id)"/>
            </column>

            <column name="action" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="result" type="VARCHAR(10)">
                <constraints nullable="false" foreignKeyName="fk_user_result"
                             references="training_dairy.user_audit_result(result)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>